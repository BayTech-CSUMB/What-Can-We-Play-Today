<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <!-- Ensures our viewport is properly set to scale -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> <%= title %> </title>
    <!-- TODO: Add Icon for Tab Bar -->
    <!-- TODO: Prune/Create specific Headers to not load all the scripts when needed -->
    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <!-- Our Custom Stylesheet -->
    <link rel = "stylesheet" href="/css/<%= stylesheet %>"  />
    <!-- GOOGLE FONTS -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Kanit&display=swap" rel="stylesheet">
    <!-- Socket.IO removed; using Supabase Realtime instead -->
    <!-- JS COOKIE CDN -->
    <script src="https://cdn.jsdelivr.net/npm/js-cookie@3.0.5/dist/js.cookie.min.js"></script>

    <script src="https://jsuites.net/v4/jsuites.js"></script>
    <link rel="stylesheet" href="https://jsuites.net/v4/jsuites.css" type="text/css" />
    <!-- Supabase JS (for Realtime Channels) -->
    <script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>
    <script>
      (function(){
        try {
          if (!window.supabaseClient) {
            const url = '<%= (publicEnv && publicEnv.SUPABASE_URL) || "" %>';
            const key = '<%= (publicEnv && publicEnv.SUPABASE_ANON_KEY) || "" %>';
            if (url && key && window.supabase) {
              window.supabaseClient = window.supabase.createClient(url, key, { auth: { persistSession: false } });
            }
          }
        } catch (e) { /* no-op */ }
      })();
    </script>
</head>
